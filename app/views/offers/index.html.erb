<h1 class="text-3xl font-bold underline">Offers for you</h1>

<div class="text-center">
  <div>
    <% @offers.each do |offer| %>
      <div class="my-3 m-auto block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-200">
        <h2 class="mb-3"><b><%= offer.title.humanize %></b></h2>

        <p class="text-xs">Based off: </p>
        <% offer.criteria.keys.each do |key| %>
          <span class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">
            <%= key.humanize %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
